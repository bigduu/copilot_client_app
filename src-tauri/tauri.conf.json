{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "copilot_chat",
  "version": "0.1.0",
  "identifier": "com.copilot_chat.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Copilot Chat",
        "width": 1200,
        "height": 800,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "label": "main"
      },
      {
        "title": "Spotlight",
        "width": 600,
        "height": 300,
        "url": "search.html",
        "decorations": false,
        "transparent": true,
        "center": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "label": "spotlight",
        "focus": true,
        "acceptFirstMouse": true,
        "fullscreen": false,
        "resizable": false,
        "theme": "Dark",
        "hiddenTitle": true,
        "minimizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
